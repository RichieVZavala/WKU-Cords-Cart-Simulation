<launch>
    <param name="robot_description" command="cat '$(find my_robots)/cords_bot.urdf'" />
     
    
    <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model cords_bot -z 1" />
          
    <!--<node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="1 0 0 0 0 0 1 odom link_chassis 100" />-->
