    <node pkg="move_base" type="move_base" respawn="true" name="move_base" output="screen">
    <remap from="cmd_vel" to="my_gen3/cords_bot/cmd_vel"/>
    <remap from="base_link" to="/link_chassis"/>

    <rosparam file="$(find my_robots)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find my_robots)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find my_robots)/config/local_costmap_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find my_robots)/config/global_costmap_params.yaml" command="load" ns="global_costmap"/>
    
    <rosparam file="$(find my_robots)/config/base_local_planner_params.yaml" command="load" />
    
  </node>
  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find my_robots)/maps/test2.yaml" />

